<?php else: ?>
        <tr>
            <td colspan="2">
                There are currently no modules installed.
            </td>
        </tr>
<?php endif; ?>
    </table>
    <table class="system-overview" cellspacing="0" cellpadding="0" border="0">
        <tr>
            <th colspan="2">
                System Overview
            </th>
        </tr>
<?php foreach ($overview as $key => $value): ?>
<?php if ((stripos($key, 'path') === false) && (stripos($key, 'root') === false)): ?>
        <tr>
            <td><strong><?=(ucwords(str_replace(array('_', 'php'), array(' ', 'PHP'), $key))); ?>:</strong></td>
            <td><?=$value; ?></td>
        </tr>
<?php endif; ?>
<?php endforeach; ?>
    </table>
<?php endif; ?>
