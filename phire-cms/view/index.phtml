    $assets = unserialize($module->assets);
    $moduleName = (isset($assets['info']['Module Name'])) ? $assets['info']['Module Name'] : $module->folder;
?>
        <tr>
            <td><strong><?=$moduleName; ?></strong></td>
            <td><?=(($module->active) ? 'Active' : 'Not Active'); ?></td>
        </tr>
